<div class="tagline">
  <h1>Welcome to SMS Scheduler</h1>
  <h2>A Client Messaging App</h2>
</div>

<div class="action-boxes">
  <%= form_tag Routes.session_path(@conn, :create) do %>
    <label>
      Email:<br />
      <input type="text" name="email">
    </label>
    <br />
    <label>
      Password:<br />
      <input type="password" name="password">
    </label>
    <br />
    <%= submit "Login" %>
  <% end %>
</div>